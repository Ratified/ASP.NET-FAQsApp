<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>FAQs</title>
    <style>
        header {
            background-color: #00FFFF;
            color: white;
            padding: 20px;
            text-align: center;
        }

        main{
            display: flex;
            margin: 6rem;
            gap: 1rem;
        }

        .navbar-questions{
            width: 100%;
            min-width: 600px;
        }

        .categories-history nav ul {
            list-style-type: none;
            padding: 0;
        }

        .categories-history nav ul li {
            color: blue;
            border: 1px solid black;
            padding: 0.7rem;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .categories-history nav ul li a{
            text-decoration: none;
        }

        .navbar-questions .question_container {
            width: 100%;
        }

        .question {
            margin-bottom: 20px;
        }

        .question-answer{
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .bold{
            font-weight: bold;
        }

        .topic__category {
            display: flex;
            justify-content: space-between;
        }

        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>

    <header>
        <h1>FREQUENTLY ASKED QUESTIONS</h1>
    </header>

    <main>
        <!-- Categories: General and History -->
        <div class="categories-history">
            <nav>
                <ul>
                    <li><a href="/?category=general">General</a></li>
                    <li><a href="/?category=history">History</a></li>
                </ul>
            </nav>
        </div>

        <div class="navbar-questions">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">All FAQs</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/?topic=bootstrap">Bootstrap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/?topic=c%23">C#</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/?topic=javascript">Javascript</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="question_container">
                <table>
                    @foreach (var faq in Model)
                    {
                        <tr>
                            <td class="question">
                                <div class="question-answer">
                                    <p class="bold">@faq.Question</p>
                                    <p>@faq.Answer</p>
                                </div>
                                <div class="topic__category">
                                    <p class="topic">Topic: @faq.Topic</p>
                                    <p class="category">Category: @faq.Category</p>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </main>
</body>
</html>